# GitHub Personal Access Token (for GitHub MCP server)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Perplexity API Key (for Perplexity MCP server)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Naver Search API (for Naver MCP server)
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Exa API Key (for Exa MCP server)
EXA_API_KEY=your_exa_api_key

# SearXNG Base URL (for SearXNG MCP server)
SEARXNG_BASE_URL=https://your-searxng-instance.com

# Supabase Configuration (for Supabase MCP server)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# n8n Configuration (for n8n MCP server)
N8N_API_KEY=your_n8n_api_key
N8N_BASE_URL=https://your-n8n-instance.com

# Obsidian Vault Path (for Obsidian MCP server)
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# YouTube API Key (for YouTube Data MCP server)
YOUTUBE_API_KEY=your_youtube_api_key

# Ollama Host (for Claude Ollama Devika MCP server)
OLLAMA_HOST=http://localhost:11434

# Server Port (default: 3001)
PORT=3001

# Claude Config Path (auto-detected, but can be overridden)
# CLAUDE_CONFIG_PATH=/path/to/.claude.json
